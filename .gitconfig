[user]
	name = David Gethings
	email = dgethings@me.com
[core]
	editor = nvim
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # use n and N to move between diff sections
  linenumbers = true
  side-by-side = true
  features = "Catppuccin Mocha"
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[init]
	defaultBranch = main
